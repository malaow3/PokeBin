{
  "manifest_version": 3,
  "name": "PokeBin Extension",
  "version": "2.0.0",
  "description": "Import and Export teams to & from PokeBin!",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "host_permissions": [
    "https://play.pokemonshowdown.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://play.pokemonshowdown.com/*"
      ],
      "js": [
        "dist/inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/main.js"
      ],
      "matches": [
        "https://play.pokemonshowdown.com/*"
      ]
    }
  ]
}
